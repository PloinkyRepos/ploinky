<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
  <title>Goal Kick</title>
  <style>
    :root { --bg:#06101a; --fg:#fff; }
    html,body{height:100%;margin:0;background:var(--bg);color:var(--fg);font-family:system-ui,sans-serif}
    canvas{width:100%;height:100%;display:block}
    .hud{position:fixed;top:10px;left:12px;right:12px;display:flex;justify-content:space-between}
    .pill{background:#0b1b2a;border:1px solid #12314d;border-radius:999px;padding:6px 10px;font-weight:700}
  </style>
</head>
<body>
  <div class="hud"><div class="pill">Goals: <span id="g">0</span></div><div class="pill" id="r">Restart</div></div>
  <canvas id="c"></canvas>
  <script>
    const c=document.getElementById('c'),x=c.getContext('2d');let W,H;function R(){W=c.width=c.clientWidth;H=c.height=c.clientHeight}addEventListener('resize',R,{passive:true});R();
    let ball={x:W*0.2,y:H*0.8,vx:0,vy:0,shot:false},goalie={x:W*0.7,y:H*0.4,vx:2.2},goals=0;
    function reset(){ball.x=W*0.2;ball.y=H*0.8;ball.vx=ball.vy=0;ball.shot=false;goalie.x=W*0.65;goalie.vx=2+Math.random()*2}
    function loop(){update();draw();requestAnimationFrame(loop)}
    function update(){if(ball.shot){ball.y+=ball.vy;ball.x+=ball.vx}else{goalie.x+=goalie.vx;if(goalie.x>W*0.9||goalie.x<W*0.6)goalie.vx*=-1}}
    function draw(){x.clearRect(0,0,W,H);x.fillStyle='#0c2a1f';x.fillRect(W*0.55,0,W*0.4,H);x.fillStyle='#fff';x.fillRect(W*0.95,H*0.3,4,H*0.4);x.beginPath();x.arc(ball.x,ball.y,10,0,Math.PI*2);x.fillStyle='#f1f5f9';x.fill();x.fillStyle='#eab308';x.fillRect(goalie.x-15,goalie.y-25,30,50);if(ball.shot){if(ball.x>W*0.95 && ball.y>H*0.3 && ball.y<H*0.7){goals++;document.getElementById('g').textContent=goals;reset()}if(Math.abs(ball.x-goalie.x)<20 && Math.abs(ball.y-goalie.y)<30){reset()}}}
    c.addEventListener('pointerdown',e=>{if(ball.shot){return}const r=c.getBoundingClientRect();const tx=e.clientX-r.left,ty=e.clientY-r.top;const dx=tx-ball.x,dy=ty-ball.y;const k=1/Math.max(60,Math.hypot(dx,dy));ball.vx=dx*k*6;ball.vy=dy*k*6;ball.shot=true})
    document.getElementById('r').onclick=()=>{goals=0;document.getElementById('g').textContent=0;reset()}
    reset();loop();
  </script>
</body>
</html>


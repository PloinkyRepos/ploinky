<!doctype html>
<html lang="en"><head><meta charset="utf-8"/><meta name="viewport" content="width=device-width, initial-scale=1"/><title>Tic‑Tac‑Toe Advanced</title><style>html,body{height:100%;margin:0;background:#0a1224;color:#f8fafc;font-family:system-ui,sans-serif}.wrap{height:100%;display:flex;align-items:center;justify-content:center}.board{display:grid;grid-template-columns:repeat(3,92px);gap:8px;background:#0f172a;border:1px solid #1f2a44;border-radius:16px;padding:16px;box-shadow:0 12px 30px rgba(0,0,0,.35)}.cell{width:92px;height:92px;display:flex;align-items:center;justify-content:center;font-size:48px;border-radius:10px;background:#111a33;cursor:pointer}.msg{text-align:center;margin-top:8px;font-weight:800}</style></head><body><div class="wrap"><div><div class="board" id="b"></div><div class="msg" id="m">Your turn</div></div></div><script>const b=document.getElementById('b'),m=document.getElementById('m');let s=Array(9).fill(''),human='X',ai='O',over=false;function render(){b.innerHTML='';s.forEach((v,i)=>{const d=document.createElement('div');d.className='cell';d.textContent=v||'';d.onclick=()=>move(i);b.appendChild(d)})}function lines(){return[[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]]}function win(board){for(const [a,b,c] of lines()){if(board[a]&&board[a]===board[b]&&board[b]===board[c])return board[a]}return board.every(Boolean)?'D':null}function move(i){if(over||s[i])return;s[i]=human;const w=win(s);render();if(w){finish(w);return} aiMove();}function aiMove(){let best=-Infinity, bi=null; const empty=s.map((v,i)=>v?null:i).filter(v=>v!==null); for(const i of empty){s[i]=ai; const val=minimax(s,false,-Infinity,Infinity); s[i]=''; if(val>best){best=val;bi=i}} s[bi]=ai; render(); const w=win(s); if(w) finish(w);}function minimax(board, isMax, alpha, beta){const w=win(board); if(w) return w===ai?1:w===human?-1:0; const empty=board.map((v,i)=>v?null:i).filter(v=>v!==null); if(isMax){let best=-Infinity; for(const i of empty){board[i]=ai; best=Math.max(best,minimax(board,false,alpha,beta)); board[i]=''; alpha=Math.max(alpha,best); if(beta<=alpha) break;} return best;} else {let best=Infinity; for(const i of empty){board[i]=human; best=Math.min(best,minimax(board,true,alpha,beta)); board[i]=''; beta=Math.min(beta,best); if(beta<=alpha) break;} return best;}}function finish(w){over=true; m.textContent=w==='D'?'Draw':(w+' wins!'); setTimeout(()=>{ s=Array(9).fill(''); over=false; m.textContent='Your turn'; render(); },1000)}render()</script></body></html>


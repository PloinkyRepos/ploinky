<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Italian Colors</title>
  <style>
    html,body{height:100%;margin:0;background:#0a1224;color:#f8fafc;font-family:system-ui,sans-serif}
    .wrap{height:100%;display:flex;align-items:center;justify-content:center}
    .card{width:min(540px,94vw);background:#0f172a;border:1px solid #1f2a44;border-radius:16px;padding:16px;box-shadow:0 12px 30px rgba(0,0,0,.35)}
    .big{font-size:28px;font-weight:800;margin-bottom:8px;text-align:center}
    .opts{display:grid;grid-template-columns:repeat(2,min(220px,44vw));gap:10px;justify-content:center}
    .btn{background:#12223a;color:#fff;border:none;border-radius:12px;padding:12px;font-weight:700}
    .bar{height:6px;background:#0b1b34;border-radius:6px;margin:10px 0}
    .fill{height:100%;width:0;background:linear-gradient(90deg,#60a5fa,#22c55e);border-radius:6px}
  </style>
</head>
<body>
  <div class="wrap"><div class="card">
    <div class="big" id="q">Ascolta e scegli il significato</div>
    <div class="bar"><div class="fill" id="f"></div></div>
    <div class="opts" id="opts"></div>
  </div></div>
  <script>
    function speak(t){ try{ if(!('speechSynthesis' in window))return; const u=new SpeechSynthesisUtterance(String(t)); u.lang='it-IT'; speechSynthesis.cancel(); speechSynthesis.speak(u);}catch(_){}}
    const PAIRS=[["rosso","red"],["giallo","yellow"],["verde","green"],["blu","blue"],["nero","black"],["bianco","white"],["arancione","orange"],["rosa","pink"],["viola","purple"],["grigio","gray"]];
    let idx=0; const opts=document.getElementById('opts'),fill=document.getElementById('f');
    function next(){ const p=PAIRS[idx%PAIRS.length]; const it=p[0], en=p[1]; const choices=[en];
      while(choices.length<4){ const pick=PAIRS[Math.random()*PAIRS.length|0][1]; if(!choices.includes(pick)) choices.push(pick); }
      choices.sort(()=>Math.random()-.5); opts.innerHTML='';
      choices.forEach(ch=>{ const b=document.createElement('button'); b.className='btn'; b.textContent=ch; b.onclick=()=>pick(ch,en); opts.appendChild(b); });
      document.getElementById('q').textContent='Ascolta e scegli il significato'; setTimeout(()=>speak(it),200);
    }
    function pick(sel,ans){ if(sel===ans){ idx++; fill.style.width=Math.min(100, idx/PAIRS.length*100)+'%'; next(); } else { document.getElementById('q').textContent='Riprova'; } }
    next();
  </script>
</body>
</html>


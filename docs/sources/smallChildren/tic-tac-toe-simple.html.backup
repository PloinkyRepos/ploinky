<!doctype html>
<html lang="en"><head><meta charset="utf-8"/><meta name="viewport" content="width=device-width, initial-scale=1"/><title>Tic‑Tac‑Toe</title><style>html,body{height:100%;margin:0;background:#0a1224;color:#f8fafc;font-family:system-ui,sans-serif}.wrap{height:100%;display:flex;align-items:center;justify-content:center}.board{display:grid;grid-template-columns:repeat(3,92px);gap:8px;background:#0f172a;border:1px solid #1f2a44;border-radius:16px;padding:16px;box-shadow:0 12px 30px rgba(0,0,0,.35)}.cell{width:92px;height:92px;display:flex;align-items:center;justify-content:center;font-size:48px;border-radius:10px;background:#111a33;cursor:pointer}.msg{text-align:center;margin-top:8px;font-weight:800}</style></head><body><div class="wrap"><div><div class="board" id="b"></div><div class="msg" id="m">Your turn</div></div></div><script>const b=document.getElementById('b'),m=document.getElementById('m');let s=Array(9).fill(''),turn='X',over=false;function render(){b.innerHTML='';s.forEach((v,i)=>{const d=document.createElement('div');d.className='cell';d.textContent=v||'';d.onclick=()=>move(i);b.appendChild(d)})}function lines(){return[[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]]}function win(){for(const [a,b,c]of lines()){if(s[a]&&s[a]===s[b]&&s[b]===s[c])return s[a]}return null}function move(i){if(over||s[i])return;s[i]=turn;turn='O';check();if(!over)setTimeout(ai,350)}function ai(){const empty=s.map((v,i)=>v?null:i).filter(v=>v!==null); if(!empty.length){return} const tryWin=(p)=>{for(const i of empty){s[i]=p;if(win()===p){s[i]='';return i}s[i]=''}return null}; let i=tryWin('O'); if(i==null) i=tryWin('X'); if(i==null) i=empty.includes(4)?4:empty[(Math.random()*empty.length)|0]; s[i]='O'; turn='X'; check()} function check(){render(); const w=win(); if(w){ m.textContent=w+' wins!'; over=true; setTimeout(reset,1000); return } if(s.every(Boolean)){ m.textContent='Draw'; over=true; setTimeout(reset,1000); } else { m.textContent= turn==='X'?'Your turn':'Thinking…' }} function reset(){ s=Array(9).fill(''); turn='X'; over=false; m.textContent='Your turn'; render() } render()</script></body></html>

